<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textStyle="bold" android:textSize="16sp" />

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Введите количество (например, 3.5)" android:paddingTop="8dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInput.Outlined"
        android:hint="Дельта"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDelta"
            android:inputType="numberDecimal"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
