<resources>
    <style name="Theme.CRM" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/bg</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOutline">@color/outline</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/md_on_primary</item>

        <!-- глобальные стили кнопок -->
        <item name="materialButtonStyle">@style/Btn.Filled</item>
        <item name="materialButtonOutlinedStyle">@style/Btn.Outlined</item>

        <!-- текст по-умолчанию светлый -->
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <!-- filled -->
    <style name="Btn.Filled" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/md_on_primary</item>
        <item name="rippleColor">@color/accent_pressed</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- outlined/прозрачная -->
    <style name="Btn.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/outline</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- специальная для "Выйти" светлая -->
    <style name="Btn.Exit" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/danger_bg</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- оверлей для диалогов, чтобы текст был светлым -->
    <style name="ThemeOverlay.CRM.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <!-- заглушка, чтобы не падали старые ссылки -->
    <style name="Shape" />
</resources>
