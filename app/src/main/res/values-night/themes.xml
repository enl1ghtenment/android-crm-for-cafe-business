<!-- res/values/themes.xml -->
<resources>
    <style name="Base.Theme.CRM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Палитра -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorOnPrimary">@color/md_on_primary</item>
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorOnSecondary">@color/md_on_secondary</item>
        <item name="android:colorBackground">@color/md_bg</item>
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>
        <item name="colorOutline">@color/md_outline</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Глобально: filled и outlined -->
        <item name="materialButtonStyle">@style/Btn.Filled</item>
        <item name="materialButtonOutlinedStyle">@style/Btn.Outlined</item>

        <!-- TextInput по умолчанию outlined -->
        <item name="textInputStyle">@style/TextInput.Outlined</item>
    </style>

    <style name="Theme.CRM" parent="Base.Theme.CRM"/>

    <!-- Скругления -->
    <style name="Shape.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Кнопки -->
    <style name="Btn.Filled" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Btn.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Тональная кнопка — будем задавать ЛОКАЛЬНО через style -->
    <style name="Btn.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextInputLayout Outlined -->
    <style name="TextInput.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
    </style>
</resources>
